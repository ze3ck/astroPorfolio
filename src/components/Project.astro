---
import HTML from "../icons/Html.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-black text-white",
    icon: HTML,
  },
};

const PROJECTS = [
  {
    title: "Project 1",
    description: "descripcion bastante generica",
    link: "#",
    github: "#",
    image: "/projects/ze3ckpor.webp",
    tags: [TAGS.HTML],
  },
];
---

{
  PROJECTS.map(({ title, description, link, github, image, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gpa-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))} 
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt="Captura de pantalla del proyecto: "
        {title}
      />
    </article>
  ))
}
